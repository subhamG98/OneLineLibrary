                android:text="New Text"
                android:layout_columnWeight="1"
                android:id="@+id/p8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_columnWeight="1"
                android:id="@+id/p9" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_columnWeight="1"
                android:id="@+id/p10" />




        </LinearLayout>

